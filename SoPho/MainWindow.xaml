<Window x:Class="SoPho.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:src="clr-namespace:SoPho.Models"
        Title="MainWindow" Height="350" Width="525">
    <Window.CommandBindings>
        <CommandBinding Command="Open" Executed="ShowUserSetingsExecuted" />
    </Window.CommandBindings>

    <Grid>
        <ListBox Name="lsUsers" Margin="0,68,0,0">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <Button Command="Open"  CommandParameter="{Binding}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Edit "/>
                                <TextBlock Text="{Binding Path=User.Name}"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <Button Content="Add User" Height="23" HorizontalAlignment="Left" Margin="390,31,0,0" Name="button1" VerticalAlignment="Top" Width="101" Click="Button1Click" />
    </Grid>
</Window>
